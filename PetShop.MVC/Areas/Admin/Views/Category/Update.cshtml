@model CategoryUpdateViewModel

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>
                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Category">
                        <span asp-validation-for="Name"></span>
                        <label>IsDeleted</label>
                        <input asp-for="IsDeleted" class="form-control" placeholder="Icon">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-controller="category" asp-action="index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>